            let titleContent = '';
            
            // Forzar que siempre intentemos mostrar la jerarquía
            console.log('Creando título con jerarquía para:', windowData.folder, 'Ruta:', windowData.folderPath);
            
            // Si existe una ruta jerárquica, mostrarla con el nombre de la carpeta actual en negrita
            if (windowData.folderPath && windowData.folderPath !== windowData.folder) {
